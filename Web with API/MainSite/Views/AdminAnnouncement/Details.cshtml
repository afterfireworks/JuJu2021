            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Picture)
            </dt>
            <dd>
                @if (this.Model.Picture == null)
            {
                <span>無附件</span>
            }
            else
            {
                <img src="@Url.Action("GetImage", "AdminAnnouncement", new { sn = this.Model.SN, date = this.Model.Date })" class="img"/>
