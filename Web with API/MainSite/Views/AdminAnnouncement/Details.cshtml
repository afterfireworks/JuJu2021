        <dl class="dl-horizontal"@*style="padding-top: 40vh;"*@>
            <dt>
                @Html.DisplayNameFor(model => model.SN)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SN)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
