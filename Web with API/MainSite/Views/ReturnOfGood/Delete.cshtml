@model MainSite.Models.ReturnOfGoods

@{
    ViewBag.Title = "刪除退貨|";
}

<h2 class="text-center">刪除退貨包裹資料</h2>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<div class="bgdetail">
    <div class="customFrom">
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Resident.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Resident.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LogisticsCompany)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LogisticsCompany)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Sign)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sign)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReceiptDate)
            </dt>

            <dd>
                @{
                    if (this.Model.ReceiptDate == null)
                    {<span>未被領取</span>
                    }
                    else {@Html.DisplayFor(model => model.ReceiptDate)}
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CourierSign)
            </dt>

            <dd>
                @{
                    if (this.Model.CourierSign == null)
                    {<span>無資料</span>
                    }
                    else
                    {
                    <img src="@Url.Action("GetImage", "ReturnOfGood", new { sn = this.Model.SN, account = this.Model.Account })" class="card-img-top img-thumbnail img" />
                    }
                  }
            </dd>
        </dl>

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="btns">
                @Html.ActionLink("返回包裹列表", "Index", "", new { @class = "btn btn-sm btn-outline-dark" })
                <input type="submit" value="確認" class="btn btn-sm btn-outline-dark ml-5" />
            </div>
        </div>
    }
    </div>
</div>