@model MainSite.Models.Meeting

@{
    ViewBag.Title = "新增會議紀錄|";
}

<h2 class="text-center">新增會議紀錄</h2>

<div class="bgdetail">
    @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal customFrom">

        <h4>社區會議</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker-here", data_timepicker = "true", data_language = "zh", data_position = "right center" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChairmanAccount, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.DropDownList("ChairmanAccount", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ChairmanAccount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.URL, "連結請用 Youtube 的分享按鈕後複製, 勿直接複製連覽器連結", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="btns">
                @Html.ActionLink("返回會議列表", "Index", "", new { @class = "btn btn-sm btn-outline-dark" })
                <input type="submit" value="建立" class="btn btn-sm btn-outline-dark" />
            </div>
        </div>
    </div>
}
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetimepicker")
}
