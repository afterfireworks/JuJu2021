<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title 居居</title>
    @Styles.Render("~/Content/css")
    @RenderSection("partialcss", false)
   
</head>
<body>
    <div class="navbar navbar-dark bg-dark fixed-top navbar-expand-lg">
        <div class="container">
            @*<div class="navbar-header">*@
            <button type="button" class="navbar-toggle d-md-none" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
                @Html.ActionLink("主任委員管理頁", "Index", "AdminHome", new { area = "" }, new { @class = "navbar-brand mr-5" })
            @*</div>*@
        <div class="navbar-collapse collapse row justify-content-between" id="navbarNav">
            <ul class="nav navbar-nav float-right float-md-left">
                <li class="nav-item">@Html.ActionLink("社區公告", "Index", "AdminAnnouncement", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("社區會議", "Index", "AdminMeeting", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("住戶管理", "Index", "AdminResident", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("帳號管理", "Index", "AdminManagement", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
            <ul class="nav navbar-nav float-right float-md-right">
                <li class="nav-item">@Html.ActionLink("主委登出", "Logout", "LoginManager", new { area = "" }, new { @class = "nav-link" })</li>
                @*<li class="nav-item">@Html.ActionLink("主委登入", "LoginAdmin", "LoginManager", new { area = "" }, new { @class = "nav-link" })</li>*@
                @*<li class="nav-item">@Html.ActionLink("管理員頁面", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
            </ul>
        </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - 居居</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
