@model MainSite.Models.Collector

@{
    ViewBag.Title = "設定代收人|";
}

<h2 class="text-center">設定代收人</h2>
<div class="bgdetail">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal customFrom">

            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Account, "本人", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    @Html.DropDownList("Account", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ID, "代收人", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-12">
                    @Html.DropDownList("ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="btns">
                    @Html.ActionLink("返回代收人列表", "Index", "", new { @class = "btn btn-sm btn-outline-dark" })
                    <input type="submit" value="建立" class="btn btn-sm btn-outline-dark" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
