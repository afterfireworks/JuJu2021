@model IEnumerable<MainSite.Models.Resident>

@{
    ViewBag.Title = "住戶管理";
}

<h2>社區住戶列表</h2>

@*<p>
        @Html.ActionLink("住戶查詢", "Index", new {  })
    </p>*@

    @using (Html.BeginForm("Serch", "Resident", FormMethod.Get))
    {
<form>
    <div class="form-group">
        <b>搜尋設定 :</b><br>
        @Html.RadioButton("option", "all") <text>全部列表</text>
        @Html.RadioButton("option", "id") <text>身分證字號</text>
        @Html.RadioButton("option", "account") <text> 住戶帳號 </text>
        @Html.RadioButton("option", "name") <text>姓名</text>
    </div>
    <div class="form-group">
        @Html.TextBox("search")
        <input type="submit" name="submit" value="Search" class="" />
    </div>
</form>
    }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ID)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>*@
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <div class="fcc" style="height: 60px; display: flex;justify-content: flex-start;align-items: center;">
                    @if (item.Photo == null)
                    {
                        <span>無照片</span>
                    }
                    else
                    {
                        @*<a href="/display/@item.Photo">*@
                            <img src="@Url.Action("GetImage", "Resident", new { account = item.Account })" class="card-img-top img-thumbnail img" />
                        @*</a>*@
                    }
                </div>
            </td>
            <td class="align-middle">
                @*@Html.ActionLink("明細", "Details", new { account = item.Account }) |*@
            </td>
        </tr>
    }

</table>
@section partialcss{
    <style>
        .img {
            max-height: 60px;
            width: auto;
        }
    </style>
}