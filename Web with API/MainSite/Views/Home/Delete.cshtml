@model MainSite.Models.Package

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center">刪除包裹資料</h2>
<h4 class="text-center">Are you sure you want to delete this?</h4>
<div class="bgdetail">
    <div class="customFrom">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ArrivalDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Sign)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sign)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SignDate)
            </dt>

            <dd>
                @{
                    if (this.Model.SignDate == null)
                    {<span>未被領取</span>
                    }
                    else
                    {@Html.DisplayFor(model => model.SignDate)}
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.COD)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.COD)
            </dd>
        </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="btns">
                @Html.ActionLink("返回包裹列表", "Index", "", new { @class = "btn btn-sm btn-outline-dark" })
                <input type="submit" value="確認" class="btn btn-sm btn-outline-dark ml-5" />
            </div>
        </div>
    }
    </div>
</div>